    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTWyqjeuSv8S5ur9pPJXXiPCGYgfdOMVc&libraries=places&callback=initApp" async defer></script>

    <script>
        let map, directionsService, directionsRenderer, autocompleteOrigem, autocompleteDestino;
        let selectedType = 'Viagem';
        let valorFinal = "5,00";

        function initApp() {
            const caruaru = {lat: -8.2822, lng: -35.9715};
            map = new google.maps.Map(document.getElementById('map'), { center: caruaru, zoom: 14, disableDefaultUI: true });
            directionsService = new google.maps.DirectionsService();
            directionsRenderer = new google.maps.DirectionsRenderer({ 
                map: map,
                polylineOptions: { strokeColor: '#FF1493', strokeWeight: 5 }
            });

            const options = { componentRestrictions: {country: 'br'} };
            autocompleteOrigem = new google.maps.places.Autocomplete(document.getElementById('origem'), options);
            autocompleteDestino = new google.maps.places.Autocomplete(document.getElementById('destino'), options);

            autocompleteOrigem.addListener('place_changed', calculateRoute);
            autocompleteDestino.addListener('place_changed', calculateRoute);
        }

        function calculateRoute() {
            const p1 = autocompleteOrigem.getPlace();
            const p2 = autocompleteDestino.getPlace();
            if (!p1 || !p1.geometry || !p2 || !p2.geometry) return;

            directionsService.route({
                origin: p1.geometry.location,
                destination: p2.geometry.location,
                travelMode: 'DRIVING'
            }, (res, status) => {
                if (status === 'OK') {
                    directionsRenderer.setDirections(res);
                    const dist = res.routes[0].legs[0].distance.value / 1000;
                    
                    // C√°lculo: 5.00 Base + 0.90 por KM
                    let total = 5.00 + (dist * 0.90);
                    if (total < 5.00) total = 5.00;

                    valorFinal = total.toLocaleString('pt-BR', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                    document.getElementById('valor-total').innerText = "R$ " + valorFinal;
                }
            });
        }

        function setType(t) {
            selectedType = t;
            document.getElementById('opt-viagem').classList.toggle('active', t === 'Viagem');
            document.getElementById('opt-entrega').classList.toggle('active', t === 'Entrega');
        }

        function toggleWidget() { document.getElementById('widget-container').classList.toggle('collapsed'); }
        function toggleFAQ() { document.getElementById('faq-sidebar').classList.toggle('active'); }

        function sendWhatsApp() {
            const ori = document.getElementById('origem').value;
            const des = document.getElementById('destino').value;
            if(!ori || !des) return alert("Selecione os endere√ßos na lista!");
            
            const msg = `‚ö° *BORA MOTO - NOVO PEDIDO (${selectedType})*\nüìç *De:* ${ori}\nüèÅ *Para:* ${des}\nüí∞ *Valor:* R$ ${valorFinal}`;
            window.open(`https://wa.me/5581991712613?text=${encodeURIComponent(msg)}`);
        }
    </script>
